@model BaseViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CharCheck - @ViewBag.Title</title>
    <link href="~/Content/site/css/site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    <script src="~/Scripts/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/site/site.js" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <div id="content">
        @if (Model.HasError)
        {
            <span class="error">@Model.ErrorText</span>
        }
        else
        {
            @RenderBody()
        }
    </div>
</body>
</html>
